{{#each this}}
<div class="country-card">
    <article class="card">
        <img src="{{flag}}" alt="{{name}}" class="card__image" />
        <div class="card__content">
            <h2 class="card__name">{{name}}</h2>
            <p class="card__capital">Country capital: {{capital}}</p>
            <p class="card__population">Population: {{population}}</p>
            <p class="card__languages">Languages:</p>
            <ul class="languages-list">
                {{#each languages}}
                <li class="languages__item">{{name}}</li>
                {{/each}}
            </ul>
        </div>
    </article>
</div>{{/each}}